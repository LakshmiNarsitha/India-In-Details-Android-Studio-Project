<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/goa" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    ADMINISRATIVE DETAILS"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAPITAL : Panaji

\nGOVERNOR : PS Sreedharan Pillai

\nCHIEF MINISTER : Pramod Sawant" />

        <TextView
            android:id="@+id/textView59"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="           STATE SYMBOLS" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/gahaha" />

        <TextView
            android:id="@+id/textView60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="State emblem : Emblem of Goa
\nState motto : सर्वे भद्राणि पश्यन्तु मा कश्चिद् दुःखमाप्नुयात्(May everyone see goodness, may none suffer any pain)
\nState animal : Gaur (Bos gaurus)
\nState bird : Ruby Throated Yellow Bulbul (Pycnonotus gularis)
\nState fish : Grey mullet/Shevtto in Konkani (Mugil cephalus)
\nState flower : Frangipani (Plumeria rubra)
\nState tree : Matti (Terminalia crenulata)" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="        MAJOR RIVERS" />

        <TextView
            android:id="@+id/textView62"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Terekhol\nMandovi\nBaga\nZuari\nColval\nSaleri\nMandre\nHarmal\nSal\nTalpona\nGaljibag" />

        <TextView
            android:id="@+id/textView63"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="HISRORICAL AND TOURIST PLACES" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/fort" />

        <TextView
            android:id="@+id/textView64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Basilica of Bom Jesus\nSt. Estevam Island\nAguada Fort\nSinquerim Fort" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="UNESCO HERITAGE SITES" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/hello" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Basilica of Bom Jesus\nSt. Francis of Assisi\nOur Lady of Rosary" />
    </LinearLayout>
</ScrollView>