<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gujarat">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/modiji" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    ADMINISRATIVE DETAILS"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="CAPITAL : Gandhinagar

\nGOVERNOR : Acharya Devvrat

\nCHIEF MINISTER : Bhupendra Rajnikant Patel" />

        <TextView
            android:id="@+id/textView69"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="           STATE SYMBOLS" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/guj" />

        <TextView
            android:id="@+id/textView70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="State emblem : Uses the National Emblem of India
\nState motto : सत्यमेव जयते(Truth alone triumphs)
\nState song : Jai Jai Garavi Gujarat
\nState animal : Asiatic Lion (Panthera leo persica)
\nState bird : Greater Flamingo (Phoenicopterus roseus)
\nState flower : Marigold (Tagetes)
\nState tree : Banyan Tree" />

        <TextView
            android:id="@+id/textView71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="        MAJOR RIVERS" />

        <TextView
            android:id="@+id/textView72"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Narmada\nTapi\nSabarmati" />

        <TextView
            android:id="@+id/textView73"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="HISRORICAL AND TOURIST PLACES" />

        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/somnath" />

        <TextView
            android:id="@+id/textView86"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Rani ki vav\nLaxmi Vilas Palace\nDholavira\nSomnath Temple" />

        <TextView
            android:id="@+id/textView75"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="UNESCO HERITAGE SITES" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/ranika" />

        <TextView
            android:id="@+id/textView76"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Rani ni Vav (Queen's step-well)\nChampaner-Pavagadh Archaeological Park\nDholavira" />
    </LinearLayout>

</ScrollView>