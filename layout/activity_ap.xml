<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/ap" />

        <TextView
            android:id="@+id/textView275"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    ADMINISRATIVE DETAILS"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Capital : Amaravathi \nCHEIF MINISTER : Shri Y.S.Jagan Mohan Reddy \nGovernor: Bishwabhushan Harichandan"
            android:textSize="20dp" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="         STATE SYMBOLS : "

            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/ap_symbols" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="State emblem : Emblem of Andhra Pradesh
            \nState motto : సత్యమేవ జయతే (Truth alone triumphs)
            \nState song : Maa Telugu Thalliki
            \nState animal : Blackbuck (Antilope cervicapra)
            \nState bird : Rose-ringed parakeet
            \nState fish : Snakehead Murrel (Channa striata)
            \nState flower : Common jasmine (Jasminum officinale)
            \nState fruit : Mango
            \nState tree : Neem"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     MAJOR RIVERS"
            android:textSize="30dp"/>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Godavari\n Krishna\n Vamsadhara\n Nagavali \n Penna" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="HISTORIC AND TOURIST PLACES" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/ttd" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Araku valley
            \nvisakhapatnam
            \nAmaravathi
            \nGandikota
            \nThirumala Sri Venkateswara Swamy temple" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text=" UNESCO HERITAGE SITES" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Lepakshi Nandi Temple\nAmaravati\nUndavalli Caves" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="   NATIONAL PARKS" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Papikonda National Park
\nRajiv Gandhi (Rameswaram) National Park
\nSri Venkateswara National Park
" />


    </LinearLayout>
</ScrollView>